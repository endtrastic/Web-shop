<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
  <h1 id="Bookh1">Books
    <hr>
  </h1>
  <div class="card-container">
    <% books.forEach(book => { %>
    <div class="card">
        <img src="<%= book.imageUrl %>" alt="<%= book.title || 'Book Image' %>">
        <p><strong>Author:</strong> <%= book.author %></p>
        <p><strong>Price:</strong> $<%= book.price %></p>
        <p><strong>Description: </strong><%= book.description %></p>
        <button 
          class="add-to-cart"     
          data-author="<%= book.author %>" 
          data-title="<%= book.title %>" 
          data-price="<%= book.price %>">Add to cart</button>
    </div>
    <% }) %>
  </div>
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

<script>
document.querySelectorAll('.add-to-cart').forEach(button => {
    button.addEventListener('click', () => {
        const bookAuthor = button.dataset.author;
        const bookTitle = button.dataset.title;
        const bookPrice = button.dataset.price;

        console.log(`Author: ${bookAuthor}, Title: ${bookTitle}, Price: ${bookPrice}`);

        fetch('/cart/add-to-cart', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ 
                author: bookAuthor,
                title: bookTitle,
                price: bookPrice
            }), 
        })


        .then(response => {
            if (response.ok) {
                console.log('Book added successfully');
            } else {
                console.error('Failed to add book');
            }
        })
        .catch(error => console.error('Error:', error));
    });
});


</script>

</body>
</html>